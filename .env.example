APP_ENV=dev
API_HOST=0.0.0.0
API_PORT=8000
LONG_PAUSE_MS=800
WHISPER_MODEL=medium
WHISPER_DEVICE=cpu
WHISPER_COMPUTE_TYPE=int8
MONGO_URI=mongodb://mongo:27017
MONGO_DB=okuma_analizi
FRONTEND_PORT=3000
NEXT_PUBLIC_API_BASE=http://localhost:8000

# Storage Configuration (GCS is the default and only supported backend)
STORAGE_BACKEND=gcs
GCS_BUCKET=doky_ai_audio_storage
GCS_CREDENTIALS_PATH=./gcs-service-account.json
GCS_PUBLIC_BASE=https://storage.googleapis.com

# DEBUG Configuration
DEBUG=true
LOG_LEVEL=DEBUG
LOG_FORMAT=json
LOG_FILE=./logs/app.log
TRACE_SLOW_MS=250
NEXT_PUBLIC_DEBUG=1
NEXT_PUBLIC_LOG_API=1
